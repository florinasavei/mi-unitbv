<Window x:Class="HelloWorldDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldDemoApp"
        mc:Ignorable="d"
        Title="Hello World" Height="450" Width="400">
    <Grid>
        <Button x:Name="btnSayHello" Content="Button" HorizontalAlignment="Left" Margin="16,17,0,0" VerticalAlignment="Top" Width="75" Click="btnSayHello_Click" Foreground="#B6A56969" Background="#FFCAACAC" Opacity="0.91"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="96,17,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
